{
  "short_name": "Tab Zap",
  "name": "Tab Zap",
  "manifest_version": 2,
  "version": "0.1",
  "icons": {
    "128": "favicon.png",
    "16": "favicon.png",
    "48": "favicon.png"
  },
  "permissions": ["tabs", "declarativeContent", "storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "index.html"
  }
}
